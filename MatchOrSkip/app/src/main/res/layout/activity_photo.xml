<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_centerHorizontal="true"
    tools:context="dtugroup.matchorskip.PhotoActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose a bonus card"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:textSize="30sp"
        android:id="@+id/photoActivityTitle"/>


    <ImageView
        android:layout_height="250dp"
        android:layout_width="180dp"
        android:id="@+id/cameraImg"
        android:contentDescription="CameraButton"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/defaultImg"
        android:layout_marginEnd="65dp" />

    <ImageView
        android:layout_height="250dp"
        android:layout_width="180dp"
        android:id="@+id/defaultImg"
        android:contentDescription="CameraButton"
        android:layout_marginEnd="65dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
